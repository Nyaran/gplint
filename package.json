{
  "name": "gplint",
  "version": "1.3.0",
  "description": "A Gherkin linter/validator written in javascript.",
  "author": "Luis Zurro",
  "homepage": "https://github.com/Nyaran/gplint#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nyaran/gplint"
  },
  "bugs": {
    "url": "https://github.com/Nyaran/gplint/issues"
  },
  "funding": [
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/nyaran"
    }
  ],
  "license": "ISC",
  "keywords": [
    "gherkin",
    "pickle",
    "cucumber",
    "cucumberjs",
    "linter",
    "lint"
  ],
  "main": "build/index.js",
  "bin": {
    "gplint": "bin/gplint.js"
  },
  "scripts": {
    "clean": "rimraf ./build",
    "compile": "tsc",
    "compile:watch": "npm run compile -- --watch --listFiles",
    "prebuild": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "run-s clean compile",
    "postbuild": "echo \"export const LIB_VERSION = '0.0.0';\" > src/version.ts",
    "prepare": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "demo": "node ./build/index.js -c ./test-data-wip/.gplintrc test-data-wip/**",
    "lint": "eslint --max-warnings 0 ./src ./test",
    "mocha": "cross-env NODE_ENV=test mocha --recursive",
    "test": "run-s -c -n lint test:unit",
    "test:unit": "nyc npm run mocha"
  },
  "dependencies": {
    "@cucumber/gherkin": "23.0.1",
    "@cucumber/gherkin-streams": "5.0.1",
    "chalk": "4.1.2",
    "commander": "9.2.0",
    "core-js": "3.22.4",
    "glob": "8.0.1",
    "lodash": "4.17.21",
    "strip-ansi": "6.0.1",
    "strip-json-comments": "3.0.1",
    "text-table": "0.2.0",
    "xml-js": "1.6.11"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/glob": "7.2.0",
    "@types/lodash": "4.14.182",
    "@types/node": "^12.20.50",
    "@types/text-table": "0.2.2",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "chai": "4.3.6",
    "coveralls": "3.1.1",
    "cross-env": "7.0.3",
    "eslint": "8.14.0",
    "mocha": "10.0.0",
    "mock-fs": "5.1.2",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "sinon": "13.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.4"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "directories": {
    "lib": "./src",
    "test": "./test"
  },
  "files": [
    "/build",
    "/CHANGELOG.md"
  ]
}
